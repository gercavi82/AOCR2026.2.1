@model Checklist
@{
    ViewData["Title"] = "Detalle de Checklist";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-clipboard-check"></i> Detalle de Checklist</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Título:</dt>
                                <dd class="col-sm-8"><strong>@Model.Titulo</strong></dd>

                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Fecha Creación:</dt>
                                <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Usuario:</dt>
                                <dd class="col-sm-8">@Model.UsuarioId</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="mb-3">Descripción</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    @Model.Descripcion
                                }
                                else
                                {
                                    <em>Sin descripción</em>
                                }
                            </p>
                        </div>
                    </div>

                    <hr />

                    <!-- Items del Checklist -->
                    <div class="mt-4">
                        <h5 class="mb-3"><i class="fas fa-list-check"></i> Items del Checklist</h5>
                        <div class="list-group">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <input type="checkbox" class="form-check-input me-2">
                                    <span>Verificar documentación de seguridad</span>
                                </div>
                                <span class="badge bg-warning">Pendiente</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <input type="checkbox" class="form-check-input me-2" checked>
                                    <span class="text-decoration-line-through">Revisar permisos de acceso</span>
                                </div>
                                <span class="badge bg-success">Completado</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <input type="checkbox" class="form-check-input me-2">
                                    <span>Auditar logs del sistema</span>
                                </div>
                                <span class="badge bg-warning">Pendiente</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <input type="checkbox" class="form-check-input me-2">
                                    <span>Validar respaldos de información</span>
                                </div>
                                <span class="badge bg-warning">Pendiente</span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                    25% Completado (1/4)
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Estadísticas -->
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h3 class="text-primary">4</h3>
                                    <p class="mb-0">Total Items</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h3 class="text-success">1</h3>
                                    <p class="mb-0">Completados</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center bg-light">
                                <div class="card-body">
                                    <h3 class="text-warning">3</h3>
                                    <p class="mb-0">Pendientes</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                        <div>
                            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-controller="Informe" asp-action="Crear" asp-route-checklistId="@Model.Id"
                               class="btn btn-info">
                                <i class="fas fa-file-alt"></i> Generar Informe
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>