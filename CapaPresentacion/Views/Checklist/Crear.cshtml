@model Checklist
@{
    ViewData["Title"] = "Crear Checklist";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-clipboard-list"></i> Crear Nuevo Checklist</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Titulo" class="form-label">Título del Checklist *</label>
                                <input asp-for="Titulo" class="form-control" required
                                       placeholder="Ej: Auditoría de Seguridad 2024" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="UsuarioId" class="form-label">Usuario Responsable *</label>
                                <select asp-for="UsuarioId" class="form-select" required>
                                    <option value="">Seleccione...</option>
                                    @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                        <option value="@usuario.Id">@usuario.Nombres @usuario.Apellidos</option>
                                    }
                                </select>
                                <span asp-validation-for="UsuarioId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4"
                                      placeholder="Descripción detallada del checklist..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Items del Checklist</label>
                            <div id="itemsContainer">
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control" name="items[]"
                                           placeholder="Descripción del item">
                                    <button type="button" class="btn btn-danger btnRemoverItem">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <button type="button" class="btn btn-sm btn-primary" id="btnAgregarItem">
                                <i class="fas fa-plus"></i> Agregar Item
                            </button>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Fecha de Inicio</label>
                                <input type="date" class="form-control" name="FechaInicio">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Fecha de Finalización</label>
                                <input type="date" class="form-control" name="FechaFin">
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Activo" class="form-check-label">Checklist Activo</label>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Los items pueden ser agregados o modificados posteriormente desde la opción de editar.
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Checklist
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Agregar item
            $('#btnAgregarItem').on('click', function() {
                var nuevoItem = `
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" name="items[]"
                               placeholder="Descripción del item">
                        <button type="button" class="btn btn-danger btnRemoverItem">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                `;
                $('#itemsContainer').append(nuevoItem);
            });

            // Remover item
            $(document).on('click', '.btnRemoverItem', function() {
                if ($('#itemsContainer .input-group').length > 1) {
                    $(this).closest('.input-group').remove();
                } else {
                    Swal.fire('Atención', 'Debe tener al menos un item', 'warning');
                }
            });
        });
    </script>
}