@model List<CapaModelo.Checklist>
@using CapaModelo

@{
    ViewBag.Title = "Gestión de Checklists";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-tasks"></i> Gestión de Checklists</h2>
            <p class="text-muted">Administración de checklists de auditoría</p>
        </div>
        <div class="col-md-4 text-right">
            <a href="@Url.Action("Crear", "Checklist")" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Nuevo Checklist
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Lista de Checklists</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <select class="form-control" id="filtroEstado">
                        <option value="">Todos los estados</option>
                        <option value="activo">Activos</option>
                        <option value="inactivo">Inactivos</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="date" class="form-control" id="filtroFecha" placeholder="Filtrar por fecha">
                </div>
            </div>

            <div class="table-responsive">
                <table id="tablaChecklists" class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Fecha Creación</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var checklist in Model)
                            {
                                var fecha = checklist.FechaCreacion;

                                <tr>
                                    <td>@checklist.Id</td>
                                    <td><strong>@checklist.Titulo</strong></td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(checklist.Descripcion) && checklist.Descripcion.Length > 50)
                                        {
                                            @checklist.Descripcion.Substring(0, 50)<text>...</text>
                                        }
                                        else
                                        {
                                            @checklist.Descripcion
                                        }
                                    </td>
                                    <td>@fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@checklist.UsuarioId</td>
                                    <td>
                                        @if (checklist.Activo)
                                        {
                                            <span class="badge badge-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Detalle", "Checklist", new { id = checklist.Id })"
                                               class="btn btn-sm btn-info" title="Ver Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a href="@Url.Action("Editar", "Checklist", new { id = checklist.Id })"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-sm btn-danger btnEliminar"
                                                    data-id="@checklist.Id" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    No existen checklists registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            var table = $('#tablaChecklists').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                order: [[0, 'desc']],
                columnDefs: [
                    { orderable: false, targets: 6 }
                ]
            });

            // Filtro por estado (busca el texto "Activo" / "Inactivo")
            $('#filtroEstado').on('change', function () {
                var valor = $(this).val();

                if (valor === 'activo') {
                    table.column(5).search('Activo').draw();
                } else if (valor === 'inactivo') {
                    table.column(5).search('Inactivo').draw();
                } else {
                    table.column(5).search('').draw();
                }
            });

            // Eliminar checklist
            $(document).on('click', '.btnEliminar', function () {
                var id = $(this).data('id');

                Swal.fire({
                    title: '¿Está seguro?',
                    text: "Se eliminará el checklist permanentemente",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("Eliminar", "Checklist")',
                            type: 'POST',
                            data: { id: id },
                            success: function (response) {
                                if (response && response.success) {
                                    Swal.fire('Eliminado', response.mensaje, 'success')
                                        .then(() => location.reload());
                                } else {
                                    Swal.fire('Error', (response ? response.mensaje : 'Error inesperado'), 'error');
                                }
                            },
                            error: function () {
                                Swal.fire('Error', 'No se pudo completar la solicitud.', 'error');
                            }
                        });
                    }
                });
            });

        });
    </script>
}
