            <div class="form-group">
                <label class="col-md-3 control-label">Decisión Final</label>
                <div class="col-md-9">
                    <label class="radio-inline">
                        <input type="radio" name="cumple" value="true" required />
                        <span class="text-success"><strong>Documentación Completa</strong></span>
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="cumple" value="false" required />
                        <span class="text-danger"><strong>Requiere Subsanación</strong></span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Observaciones Generales</label>
                <div class="col-md-9">
                    <textarea name="observaciones" class="form-control" rows="5" placeholder="Ingrese observaciones generales sobre la documentación..."></textarea>
