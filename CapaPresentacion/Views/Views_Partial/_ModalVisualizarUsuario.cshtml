@model CapaModelo.Usuario

<div class="modal fade" id="modalVisualizarUsuario" tabindex="-1" role="dialog" aria-labelledby="visualizarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white text-center">
                <div class="col-sm-12">
                    <img src="/Content/imganes/logo_header.png" style="width:180px; height:5em;" />
                    <h5 class="mt-2">Visualización de Usuario</h5>
                </div>
            </div>

            <div class="modal-body px-4" style="font-size:14px;">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Correo electrónico:</label>
                    <div class="col-sm-8">
                        value="@(Model != null ? Model.Email : "")"

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Nombres:</label>
                    <div class="col-sm-8">
                        <input class="form-control form-control-sm" readonly value="@(Model != null ? Model.NombreUsuario : "")" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Apellidos:</label>
                    <div class="col-sm-8">
                        <input class="form-control form-control-sm" readonly value="@(Model != null ? Model.ApellidoUsuario : "")" />

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Fecha de creación:</label>
                    <div class="col-sm-8">
                        <input class="form-control form-control-sm" readonly value="@Model?.FechaCreacion?.ToString("dd/MM/yyyy")/>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Estado:</label>
                    <div class="col-sm-8">
                        <input class="form-control form-control-sm" readonly value="@(Model != null && Model.Activo ? "Activo" : "Inactivo")" />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal" aria-label="Cerrar">
                    <img src="/Content/imagenes/cancel.png" style="width: 20px;" /> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
