@{
    ViewBag.Title = "_ModalCrearUsuario";
}

<div class="modal fade" id="modalRegistroUsuario2" tabindex="-1" role="dialog" aria-labelledby="registroUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <form id="crearForm" enctype="multipart/form-data">
                <div class="modal-header bg-primary text-white text-center">
                    <div class="col-sm-12">
                        <img src="/Content/imganes/logo_header.png" style="width:180px; height:5em;" />
                        <h5 class="mt-2">Registro de Usuario</h5>
                    </div>
                </div>

                <div class="modal-body px-4" style="font-size:14px;">
                    <div class="form-group row">
                        <label for="Correo" class="col-sm-4 col-form-label">Correo electrónico:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm" type="email" id="Correo" name="Correo" autocomplete="off" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Tipo identificación:<span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="CI" id="TipoIdentificacionC">
                                <label class="form-check-label" for="TipoIdentificacionC">Cédula</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="TipoIdentificacion" value="PS" id="TipoIdentificacionP">
                                <label class="form-check-label" for="TipoIdentificacionP">Pasaporte</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="CedulaIdentificacion" class="col-sm-4 col-form-label">Cédula/Pasaporte:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="CedulaIdentificacion" name="CedulaIdentificacion" maxlength="10" autocomplete="off" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="RUC" class="col-sm-4 col-form-label">RUC:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="RUC" name="RUC" maxlength="13" autocomplete="off" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="NombreUsuario" class="col-sm-4 col-form-label">Nombres:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="NombreUsuario" name="NombreUsuario" maxlength="40" autocomplete="off" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="ApellidoUsuario" class="col-sm-4 col-form-label">Apellidos:<span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input class="form-control form-control-sm text-uppercase" type="text" id="ApellidoUsuario" name="ApellidoUsuario" maxlength="40" autocomplete="off" required />
                        </div>
                    </div>

                    <div id="panelRepresentante" style="display:none">
                        <div class="form-group row">
                            <div class="text-sm">
                                <ul>
                                    <li>
                                        <p style="text-align:justify">
                                            Incluir la carta de delegación o carta poder otorgada por el Representante Legal del Operador Aéreo, a la persona que realiza el presente registro y que por tanto efectuará los tramites de solicitud de vuelos charters / especiales. (Adjuntar carta en formato PDF debidamente suscrita. <strong>El tamaño limite maximo para el adjunto es de 2MB).</strong>
                                        </p>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <table id="tbDetalleAdjuntos" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th class="text-center col-5" colspan="2">Compañia Operadora</th>
                                            <th class="text-center col-6">Archivo representante legal</th>
                                            <th class="col-1"></th>
                                        </tr>
                                        <tr>
                                            <th colspan="2">
                                                <div class="card-tools">
                                                    <div class="input-group">
                                                        <input type="hidden" id="mIdCompania" name="mIdCompania" />
                                                        <input type="text" class="form-control text-uppercase" id="nombreCompania" name="nombreCompania" autocomplete="off" />
                                                        <div class="input-group-append">
                                                            <div class="btn waves-effect waves-light btn-outline-primary btn-sm">
                                                                <i onclick="buscarCompaniaPorDescripcion()"><img src="/Content/imganes/buscar.png" style="width:15px" /></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                            <th>
                                                <div class="card-tools">
                                                    <div class="input-group">
                                                        <input type="file" class="custom-file-input form-control-sm" id="FileCertificadoOperador" name="FileCertificadoOperador" lang="es" accept=".pdf" />
                                                        <label id="labelFile" class="custom-file-label form-control-sm labelFile" for="FileCertificadoOperador">Subir Archivo</label>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="text-center">
                                                <button type="button" id="agregarRepresentante" class="btn btn-primary btn-file"> + </button>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Aquí se agregan filas dinámicamente -->
                                    </tbody>
                                </table>
                            </div>
                            <p>
                                <a href="#" style="font-size:11px" data-toggle="modal" data-target="#modal-informacionOperador">
                                    <i class="text-black-50">
                                        <b>En caso de no existir el operador de la aeronave en la base de datos, dar click para más información / </b>
                                    </i><samp class="text-black">Click for more information</samp>
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12 text-right">
                            <small class="text-muted">Los campos con <span class="text-danger">*</span> son obligatorios</small>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-dismiss="modal">
                        <img src="/Content/imganes/cancel.png" style="width: 20px;" /> Cancelar
                    </button>
                    <button type="submit" class="btn btn-outline-primary btn-sm">
                        <img src="/Content/imganes/save.png" style="width: 20px;" /> Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
