@{
    ViewData["Title"] = "Asignar Roles";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield"></i> Asignar Roles a: @ViewBag.NombreUsuario
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="AsignarRoles" method="post">
                        <input type="hidden" name="id" value="@ViewBag.UsuarioId" />

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Seleccione los roles que desea asignar al usuario. Los cambios se aplicarán inmediatamente.
                        </div>

                        <div class="row">
                            @foreach (var rol in ViewBag.TodosLosRoles)
                            {
                                var estaAsignado = ViewBag.RolesAsignados.Contains(rol.CodigoRol);

                                <div class="col-md-6 mb-3">
                                    <div class="card @(estaAsignado ? "border-primary" : "")">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                       name="rolesSeleccionados"
                                                       value="@rol.CodigoRol"
                                                       id="rol_@rol.CodigoRol"
                                                       @(estaAsignado ? "checked" : "") />
                                                <label class="form-check-label" for="rol_@rol.CodigoRol">
                                                    <strong>@rol.NombreRol</strong>
                                                    @if (!string.IsNullOrEmpty(rol.Descripcion))
                                                    {
                                                        <br />
                                                        <small class="text-muted">@rol.Descripcion</small>
                                                    }
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Roles
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Roles Actuales -->
            <div class="card shadow mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-check-circle"></i> Roles Actualmente Asignados</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RolesAsignados.Count > 0)
                    {
                        <div class="list-group">
                            @foreach (var rolId in ViewBag.RolesAsignados)
                            {
                                var rol = ViewBag.TodosLosRoles.FirstOrDefault(r => r.CodigoRol == rolId);
                                if (rol != null)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-shield-alt text-primary"></i>
                                            <strong>@rol.NombreRol</strong>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-danger btnRemover"
                                                data-usuario="@ViewBag.UsuarioId"
                                                data-rol="@rol.CodigoRol">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle"></i>
                            No tiene roles asignados actualmente
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btnRemover').on('click', function() {
                var usuarioId = $(this).data('usuario');
                var rolId = $(this).data('rol');

                Swal.fire({
                    title: '¿Remover rol?',
                    text: "Se quitará este rol del usuario",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sí, remover',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("RemoverRol", "UsuarioRol")',
                            type: 'POST',
                            data: { usuarioId: usuarioId, rolId: rolId },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire('Removido', response.mensaje, 'success')
                                        .then(() => location.reload());
                                } else {
                                    Swal.fire('Error', response.mensaje, 'error');
                                }
                            }
                        });
                    }
                });
            });
        });
    </script>
}