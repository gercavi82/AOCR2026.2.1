@model List<Usuario>
@{
    ViewData["Title"] = "Asignar Roles a Usuarios";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-users-cog"></i> Asignar Roles a Usuarios</h2>
            <p class="text-muted">Gestión de roles por usuario</p>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Usuarios del Sistema</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tablaUsuarios" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Roles Asignados</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Id</td>
                                <td><strong>@usuario.NombreUsuario</strong></td>
                                <td>@usuario.Nombres @usuario.Apellidos</td>
                                <td>@usuario.Email</td>
                                <td>
                                    <span class="badge bg-primary">3 roles</span>
                                </td>
                                <td>
                                    <a asp-action="AsignarRoles" asp-route-id="@usuario.Id"
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-user-cog"></i> Gestionar Roles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaUsuarios').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
}