@model IEnumerable<CapaModelo.Direccion>
@{
    ViewBag.Title = "Listado de Direcciones";
}

<h2 class="mt-3">📍 Listado de Direcciones</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<p>
    <a href="@Url.Action("Crear")" class="btn btn-primary">➕ Nueva Dirección</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Calle</th>
            <th>Ciudad</th>
            <th>Provincia</th>
            <th>País</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.CodigoDireccion</td>
                <td>@d.Calle</td>
                <td>@d.Ciudad</td>
                <td>@d.Provincia</td>
                <td>@d.Pais</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Detalle", new { id = d.CodigoDireccion })">Ver</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Editar", new { id = d.CodigoDireccion })">Editar</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar", new { id = d.CodigoDireccion })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
