@model CapaModelo.Direccion
@{
    ViewBag.Title = "Editar Dirección";
}

<h2 class="mt-3">✏️ Editar Dirección</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.CodigoDireccion)

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Calle)
        @Html.TextBoxFor(m => m.Calle, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Ciudad)
        @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Provincia)
        @Html.TextBoxFor(m => m.Provincia, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        @Html.LabelFor(m => m.Pais)
        @Html.TextBoxFor(m => m.Pais, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-3">Actualizar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancelar</a>
}
