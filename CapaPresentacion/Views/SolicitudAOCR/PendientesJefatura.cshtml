@model List<CapaModelo.SolicitudAOCR>

@{
    ViewBag.Title = "Solicitudes para Validación Técnica";
    Layout = "~/Views/Shared/_LayoutAOCR.cshtml";
}

<h2 class="mb-4">Solicitudes pendientes de Validación Técnica</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Operador</th>
                <th>Tipo</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.CodigoSolicitud</td>
                    <td>@s.NombreOperador</td>
                    <td>@s.TipoSolicitud</td>
                    <td>@s.FechaSolicitud.ToString("yyyy-MM-dd")</td>
                    <td>@s.Estado</td>
                    <td>
                        <a href="@Url.Action("Detalle", "SolicitudAOCR", new { id = s.CodigoSolicitud })" class="btn btn-sm btn-info">
                            Revisar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay solicitudes pendientes para revisión técnica.</div>
}
