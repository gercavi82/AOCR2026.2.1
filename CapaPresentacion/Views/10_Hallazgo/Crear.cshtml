@model CapaModelo.Hallazgo

<h2>Registrar Hallazgo</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.CodigoInspeccion)

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Severidad)
        @Html.DropDownListFor(m => m.Severidad,
            new SelectList(new[]{
                "LEVE","MODERADA","CRITICA"
            }),
            "-- Seleccione --",
            new { @class="form-control" })
    </div>

    <button class="btn btn-success">Guardar</button>
}
